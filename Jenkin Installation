setup EC2 Instance

yum -y update yum install -y git
yum install -y java-21-amazon-corretto yum install -y java-21-amazon-corretto-devel 
cd /opt 
sudo wget https://dlcdn.apache.org/maven/maven-3/3.9.11/binaries/apache-maven-3.9.11-bin.tar.gz 
sudo tar xvf apache-maven-3.9.11-bin.tar.gz 

ls -ltr
cd
echo "export M2_HOME=/opt/apache-maven-3.9.11" >> .bash_profile
echo "export M2=$M2_HOME/bin" >> .bash_profile
echo "export PATH=$M2:$PATH" >> .bash_profile
source ~/.bash_profile
echo $M2_HOME

git --version; java --version;  /opt/apache-maven-3.9.11/bin/mvn --version

sudo wget -O /etc/yum.repos.d/jenkins.repo \
    https://pkg.jenkins.io/redhat-stable/jenkins.repo
sudo rpm --import https://pkg.jenkins.io/redhat-stable/jenkins.io-2023.key
sudo yum upgrade
sudo yum install -y jenkins
sudo systemctl daemon-reload
service jenkins start
chkconfig jenkins on

cat /var/lib/jenkins/secrets/initialAdminPassword

http://publicip:8080
